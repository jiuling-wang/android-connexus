<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UseCameraActivity" >

     <FrameLayout
    android:id="@+id/camera_preview"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:verticalSpacing="30dp"
    android:layout_centerHorizontal="true"/>

  	<Button
    android:id="@+id/camera_capture_button"
    android:text="Take a Picture"
    android:layout_below="@id/camera_preview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:verticalSpacing="30dp"/>
  	
  	<Button
    android:id="@+id/camera_select_button"
    android:text="Use this picture"
    android:layout_toRightOf="@id/camera_capture_button"
    android:layout_below="@id/camera_preview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:verticalSpacing="30dp"/>
  	
  	<Button
	android:id="@+id/camera_back_button"
    android:text="View all streams"
    android:layout_below="@id/camera_capture_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:verticalSpacing="30dp"/>
  	<TextView
  	android:id="@+id/testTextView"
  	android:text="test"
  	android:layout_below="@id/camera_back_button"
  	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  	    />
  	
</RelativeLayout>
