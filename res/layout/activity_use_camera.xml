<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UseCameraActivity" >

     <FrameLayout
    android:id="@+id/camera_preview"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_marginBottom="15dip"
    android:layout_centerHorizontal="true"/>
  	
  	<Button
  	    style="@style/CodeFont2"
  	    android:id="@+id/camera_select_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignRight="@+id/camera_preview"
  	    android:layout_below="@id/camera_preview"
  	    android:layout_toRightOf="@+id/camera_back_button"
  	    android:text="Use it" />

  	<Button
  	    style="@style/CodeFont"
  	    android:id="@+id/camera_capture_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignLeft="@+id/camera_back_button"
  	    android:layout_alignRight="@+id/camera_back_button"
  	    android:layout_alignTop="@+id/camera_select_button"
  	    android:text="Take a Picture"
  	     />

  	<Button
  	    style="@style/CodeFont"
  	    android:id="@+id/camera_back_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentBottom="true"
  	    android:layout_alignParentLeft="true"
  	    android:layout_marginLeft="16dp"
  	    android:text="View all streams"
  	    android:verticalSpacing="30dp" />
  	
</RelativeLayout>
